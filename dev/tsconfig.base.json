{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "paths": {
      "@eternal/core/*": [
        "packages/core/*"
      ],
      "@eternal/logger-winston": [
        "packages/adapter/logger-winston/src/index.ts"
      ]
    },
    "types": [
      "vitest/globals"
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
